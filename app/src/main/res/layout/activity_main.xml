<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="40sp"
        android:id="@+id/numDetails"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/result"
        android:textSize="40sp"
        android:layout_below="@+id/numDetails"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/resultFinal"
        android:textSize="40sp"
        android:layout_below="@+id/result"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="1"
        android:textSize="25sp"
        android:layout_below="@id/resultFinal"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:text="2"
        android:textSize="25sp"
        android:layout_below="@id/resultFinal"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:text="3"
        android:textSize="25sp"
        android:layout_below="@id/resultFinal"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="260dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:text="4"
        android:textSize="25sp"
        android:layout_below="@id/btn1"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn5"
        android:text="5"
        android:textSize="25sp"
        android:layout_below="@id/btn2"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn6"
        android:text="6"
        android:textSize="25sp"
        android:layout_below="@id/btn3"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="260dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn7"
        android:text="7"
        android:textSize="25sp"
        android:layout_below="@id/btn4"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn8"
        android:text="8"
        android:textSize="25sp"
        android:layout_below="@id/btn5"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn9"
        android:text="9"
        android:textSize="25sp"
        android:layout_below="@id/btn6"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="260dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDot"
        android:text="."
        android:textSize="25sp"
        android:layout_below="@id/btn7"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn0"
        android:text="0"
        android:textSize="25sp"
        android:layout_below="@id/btn8"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEqual"
        android:text="="
        android:textSize="25sp"
        android:layout_below="@id/btn9"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="260dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddition"
        android:text="+"
        android:textSize="25sp"
        android:layout_below="@id/btnDot"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubtraction"
        android:text="-"
        android:textSize="25sp"
        android:layout_below="@id/btn0"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDivide"
        android:text="/"
        android:textSize="25sp"
        android:layout_below="@id/btnEqual"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="260dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:text="C"
        android:textSize="25sp"
        android:layout_below="@id/btnAddition"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMultiply"
        android:text="*"
        android:textSize="25sp"
        android:layout_below="@id/btnSubtraction"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:text="Back"
        android:textSize="25sp"
        android:layout_below="@id/btnDivide"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:layout_marginLeft="260dp"
        />


</RelativeLayout>